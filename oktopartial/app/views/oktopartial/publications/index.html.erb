<% content_for(Oktopartial.key_of_content_for_css || :css) do -%>
<link rel="stylesheet" type="text/css" media="screen,projection,print" href="/stylesheets/oktopartial.css" />
<% end -%>
<%= render :partial => 'oktopartial/menu' %>

<h1>Listing publications</h1>

<table>
  <tr>
    <th>Dirname</th>
    <th>Published at</th>
    <th>Status cd</th>
  </tr>

<% @publications.each do |publication| %>
  <tr>
    <td><%=h publication.dirname %></td>
    <td><%=h publication.published_at %></td>
    <td>
      <div style="float:left;">
        <%=h publication.status_name %>
      </div>
      <%= render :partial => 'oktopartial/publications/actions', :locals => {:publication => publication} %>
    </td>
    <td><%= link_to 'Show', :action => :show, :id => publication.id %></td>
    <td><%= link_to 'Edit', :action => :edit, :id => publication.id %></td>
    <td><%= link_to 'Destroy', {:action => :destroy, :id => publication.id}, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Download', {:action => :download, :id => publication.id} %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New publication', :action => :new %>
