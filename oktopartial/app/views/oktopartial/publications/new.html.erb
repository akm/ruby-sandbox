<% content_for(Oktopartial.key_of_content_for_css || :css) do -%>
<link rel="stylesheet" type="text/css" media="screen,projection,print" href="/stylesheets/oktopartial.css" />
<% end -%>
<%= render :partial => 'oktopartial/menu' %>

<h1>New publication</h1>

<% form_for(:publication, @publication, :html => {:multipart => true},
   :url => {:controller => 'oktopartial/publications', :action => 'create'}) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :dest_dir %><br />
    <%= f.text_field :dest_dir %>
  </p>

  <%= f.file_field :uploaded_file %>

  <p>
    <%= f.label :published_at %><br />
    <%= f.datetime_select :published_at %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', :action => :index %>
