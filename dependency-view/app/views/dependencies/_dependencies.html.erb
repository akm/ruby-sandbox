<table>
  <% dependencies.each do |dependency| -%>
  <tr>
    <td valign="top"><%=link_to h(dependency.source.name), 
                   :controller => 'features', :action => 'show', :id => dependency.source.name %>
    </td>
    <td valign="top">
      <%=h dependency.method %><%= '[n]' if dependency.no_loading %>
    </td>
    <td valign="top"><%=link_to h(dependency.feature.name), 
                   :controller => 'features', :action => 'show', :id => dependency.feature.name %>
    </td>
    <td valign="top">at
      <%= link_to h(dependency.called_place),
          :controller => 'dependencies', :action => 'show', :id => dependency.index %>
    </td>
  </tr>
  <% end -%>
</table>
